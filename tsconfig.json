{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "noEmit": false
  },
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
  "compileOnSave": false
}