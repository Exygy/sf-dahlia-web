.form-group
  dl.accordion-plus-minus.accordion.trigger-right data-accordion=""
    div ng-repeat="option in race_and_ethnicity_options"
      dd.accordion-navigation
        a.accordion-header draggable="false" href="{{ '#panel-' + option.race_option[0] }}"
          | {{ option.race_option[1] }}
          icon-plus-minus active="false"
        div.content ng-attr-id="{{ 'panel-' + option.race_option[0] }}"
          .checkbox-group role="group"
            div.checkbox-block-accordion ng-repeat="suboption in option.race_suboptions"
              .checkbox-block-accordion
                input ng-attr-id="{{ 'panel-' + option.race_option[0] + '-' + suboption.checkbox_option[0] }}" name="preferences" type="checkbox" value="{{ 'panel-' + option.race_option[0] + '-' + suboption.checkbox_option[0] }}" /
                label.checkbox-and-label for="{{ 'panel-' + option.race_option[0] + '-' + suboption.checkbox_option[0] }}"
                  | {{ suboption.checkbox_option[1] }}
                input.checkbox-text-input ng-attr-id="{{ 'panel-' + option.race_option[0] + '-' + suboption.checkbox_option[0] '-text' }}" ng-if="suboption.text_option" name="Other text" placeholder=("Please specify...") type="text" value="" /

